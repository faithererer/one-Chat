<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="RoundedEditText" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeWidth">2dp</item>
        <item name="boxCornerRadiusTopStart">16dp</item>
        <item name="boxCornerRadiusTopEnd">16dp</item>
        <item name="boxCornerRadiusBottomStart">16dp</item>
        <item name="boxCornerRadiusBottomEnd">16dp</item>
        <item name="boxBackgroundColor">@android:color/white</item>
    </style>

    <style name="LoginButton" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:textColor">@android:color/white</item>
        <item name="cornerRadius">20dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:padding">12dp</item>
    </style>
    <style name="codeButton" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:textColor">@android:color/white</item>
        <item name="cornerRadius">20dp</item>
        <item name="android:backgroundTint">@color/blue</item>
        <item name="android:textSize">18sp</item>
        <item name="android:padding">12dp</item>
    </style>



</resources>